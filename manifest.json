{
  "manifest_version": 2,

  "name": "pintag",
  "description": "Optimise your knowledge sharing!",
  "version": "1.0.0",
  "icons": { "128": "icon_128.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs"],
  "background": {
    "scripts": ["popup.js", "jquery_popup.js", "select2_popup.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://www.pintag.app/; object-src 'self'"
}
